    3. using UnityEngine;
    4. 
    5. 
    6. public abstract class Interactable : MonoBehaviour
    7. {
    8.     // message displayed to player when looking at an interactable.
    9.     public string promptMessage;
    10. 
    11. 
    12.     //this function will be called from our player.
    13. 
    14. 
    15.     public void BaseInteract()
    16.     {
    17.         Interact();
    18.     }
    19.     protected virtual void Interact()
    20.     {
    21.         //we wont have any code written in this function
    22.         // this is a template function to be overriden by our subclasses
    23.     }
